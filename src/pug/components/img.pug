mixin imgLazy(src, alt)
	img(class="lazy", data-src=src, src="img/placeholder.png" alt=alt)&attributes(attributes)

mixin pictureLazy(src, srcPlacegolder="img/placeholder.png", alt)
	-const srcParts = src.split(".")
	-const [srcFirstPart, extname] = srcParts

	picture
		source(type="image/webp", data-srcset=`${srcFirstPart}.webp`, srcset=srcPlacegolder)
		img(class="lazy", data-src=`${srcFirstPart}.${extname}`, alt=alt)&attributes(attributes)


mixin picture(src, alt)
	-const srcParts2 = src.split(".")
	-const [srcFirstPart2, extname2] = srcParts2

	picture
		source(type="image/webp", srcset=`${srcFirstPart2}.webp`)
		img(src=`${srcFirstPart2}.${extname2}`, alt=alt)&attributes(attributes)
